{% extends 'base.html.twig' %}

{% block title %}Username{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Username</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ username.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ username.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ username.roles ? username.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ username.password }}</td>
            </tr> #}
        </tbody>
    </table>

    <a href="{{ path('username_index') }}">Retour</a>
    <br><br>
    <a href="{{ path('username_edit', {'id': username.id}) }}" class="btn btn-warning">Edition</a>
    <br><br> 
    {{ include('username/_delete_form.html.twig') }}
</div>
{% endblock %}
