{% extends 'base.html.twig' %}

{% block title %}Autorisations index{% endblock %}

{% block body %}
    <h1>Autorisations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for autorisation in autorisations %}
            <tr>
                <td>{{ autorisation.id }}</td>
                <td>
                    <a href="{{ path('autorisations_show', {'id': autorisation.id}) }}">show</a>
                    <a href="{{ path('autorisations_edit', {'id': autorisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('autorisations_new') }}">Create new</a>
{% endblock %}
