{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Projet</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ projet.nom }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ projet.reference }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('projet_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('projet_edit', {'id': projet.id}) }}" class="btn btn-warning">Edition</a>
    <br><br>
    {{ include('projet/_delete_form.html.twig') }}
</div>
{% endblock %}
