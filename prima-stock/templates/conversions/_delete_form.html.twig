<form method="post" action="{{ path('conversions_delete', {'id': conversion.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conversion.id) }}">
    <button class="btn">Delete</button>
</form>
